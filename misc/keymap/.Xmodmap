! Based on
! http://xahlee.info/linux/linux_xmodmap_tutorial.html
! https://www.emacswiki.org/emacs/SwapControlAltAndCapsLock
! https://wiki.archlinux.org/index.php/xmodmap

! Maps:
!       left alt  |emit> left ctrl
!       caps lock |emit> left alt
!       left ctrl |emit> caps lock

!  xmodmap -pm | egrep '(Control|Alt|Caps_Lock)'
!
!  lock        Caps_Lock (0x42)
!  control     Control_L (0x25),  Control_R (0x69)
!  mod1        Alt_L (0x40),  Meta_L (0xcd)

!  xmodmap -pke | egrep '(Control_L|Alt_L|Caps_Lock)'
!
!  keycode  37 = Control_L NoSymbol Control_L
!  keycode  64 = Alt_L Meta_L Alt_L Meta_L
!  keycode  66 = Caps_Lock NoSymbol Caps_Lock
!  keycode 204 = NoSymbol Alt_L NoSymbol Alt_L


clear lock
clear control
clear mod1

keycode  64 = Control_L NoSymbol Control_L
keycode  66 = Alt_L Meta_L Alt_L Meta_L
keycode  37 = Caps_Lock NoSymbol Caps_Lock
keycode 204 = Control_L NoSymbol Control_L

add lock    = Caps_Lock
add control = Control_L Control_R
add mod1    = Alt_L Meta_L
