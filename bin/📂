#!/usr/bin/env bash
_preview() {
    exa --color=always --icons --group-directories-first "$@"
}


_format() {
    while read -r; do
        printf '%s/\n' "${_PREFIX}${REPLY}"
    done
}


export _fd_extra_args='--type d'
# export _fzf_extra_args=''
export -f _preview
export -f _format


__generic_finder "$@"
