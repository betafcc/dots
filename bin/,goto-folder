#!/usr/bin/env bash
set -euo pipefail

__main() {
  local query
  case "${1:---descend}" in
  --find)
    case "${PWD}" in
    "${HOME}")
      query="${PWD/#${HOME}/}"
      cd "${HOME}"
      ;;
    "${HOME}/"*)
      query="${PWD/#${HOME}\//}/"
      cd "${HOME}"
      ;;
    '/') query='' ;;
    '/'*)
      query="${PWD/#\//}/"
      cd /
      ;;
    esac
    ;;
  --descend) query='' ;;
  esac

  local prompt
  case "${PWD}" in
  '/') prompt='/' ;;
  "${HOME}") prompt='~/' ;;
  "${HOME}/"*) prompt='./' ;;
  *) prompt="${PWD}/" ;;
  esac

  local result="$(__fd | __fzf --prompt "${prompt}" --query "${query}")"
  if [ -z "${result}" ]; then
    printf ''
  else
    printf 'cd %q\n' "${prompt/#\~/${HOME}}${result}"
  fi

}

# __fd() {
#   fd \
#     --one-file-system \
#     --hidden \
#     --type d \
#     --no-ignore \
#     --exclude '.git' \
#     --exclude 'node_modules' \
#     "${@}" |
#     sed 's:$:/:'
# }

__fd() {
  bfs \
    -x \
    -type d -readable -o -prune \
    -exclude -name '.git' \
    -exclude -name 'node_modules' \
    "${@}" 2> /dev/null |
    sed 's:$:/:'
}

__fzf() {
  local preview_cmd="exa \
    --color=always \
    --group-directories-first \
    --all \
    --icons \
    --oneline \
    {}
  "
  fzf \
    --info hidden \
    --color 'light' \
    --height 80% \
    --layout reverse \
    --no-multi \
    --preview "${preview_cmd}" \
    --preview-window 'right:60%' \
    --filepath-word \
    --color 'gutter:-1,bg+:#ff6666,fg+:-1:bold,hl:#66ff66:bold' \
    --bind 'tab:replace-query+top,shift-tab:backward-kill-word+top' \
    "$@"
  # --expect='alt-m,alt-e,ctrl-g,esc,ctrl-m,enter' \
}

__main "${@}"
